{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": false,
    "preserveSymlinks": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ],
  "include": [
    "src/*"
  ]
}