{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ES7",
      "ES2015", "ES2016",
      "ES2017", "ES2018",
      "ESNext"],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "exclude": ["node_modules", "dist", "mysql"],
  "include": ["./src/**/*.ts"]
}
